@import '../../css/list.wxss';

.search{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  font-size: 14px;
}
.search button{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10px;
  border-left: 0px;
  background-color: #389cff;
  color: white;
  text-shadow: black 0 1px 0;
}

.input{
  width: 60%;
  border: 1px solid #ccc;
  box-shadow: inset 0 0 10px #ccc;
  color: black;
  background-color: white;
}
.inputShow{
  padding-top: 5px;
  padding-left: 20px;
  color: white;
  font-size: 14px;
}

.btnClick{
  background-color: #000;
}